# Variables de Entorno - Backend CanalMedico

# Base de Datos
DATABASE_URL="file:./dev.db"  # SQLite local (desarrollo)
# DATABASE_URL="postgresql://user:password@host:5432/dbname"  # PostgreSQL (producci√≥n)

# JWT
JWT_SECRET="tu-secret-key-super-seguro-cambiame-en-produccion"
JWT_EXPIRES_IN="7d"

# MercadoPago Chile
MERCADOPAGO_ACCESS_TOKEN="tu-access-token-de-mercadopago"
MERCADOPAGO_PUBLIC_KEY="tu-public-key-de-mercadopago"

# AWS S3 (para archivos)
AWS_ACCESS_KEY_ID="tu-aws-access-key"
AWS_SECRET_ACCESS_KEY="tu-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="canalmedico-files"

# Firebase (notificaciones push)
FIREBASE_PROJECT_ID="tu-project-id"
FIREBASE_PRIVATE_KEY="tu-private-key"
FIREBASE_CLIENT_EMAIL="tu-client-email"

# Servidor
PORT=3000
NODE_ENV="development"  # development | production
FRONTEND_URL="http://localhost:5173"

# CORS
CORS_ORIGIN="http://localhost:5173,http://localhost:8081"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL="info"  # error | warn | info | debug
