// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  DOCTOR
  PATIENT
}

enum ConsultationType {
  NORMAL
  URGENCIA
}

enum ConsultationStatus {
  PENDING
  PAID
  ACTIVE
  CLOSED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(PATIENT)
  createdAt DateTime @default(now())

  // Relaciones
  doctor            Doctor?
  patient           Patient?
  notificationToken NotificationToken[]

  @@index([email])
  @@map("users")
}

model Doctor {
  id            String   @id @default(cuid())
  userId        String   @unique
  name          String
  speciality    String
  horarios      Json?    // Horarios de disponibilidad
  tarifaConsulta Decimal  @default(0) @db.Decimal(10, 2)
  tarifaUrgencia Decimal  @default(0) @db.Decimal(10, 2)
  estadoOnline  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  consultations Consultation[]

  @@index([userId])
  @@map("doctors")
}

model Patient {
  id            String   @id @default(cuid())
  userId        String   @unique
  name          String
  age           Int?
  medicalHistory Json?   // Historial médico en JSON
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  consultations Consultation[]

  @@index([userId])
  @@map("patients")
}

model Consultation {
  id        String             @id @default(cuid())
  doctorId  String
  patientId String
  type      ConsultationType   @default(NORMAL)
  status    ConsultationStatus @default(PENDING)
  paymentId String?            @unique
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  closedAt  DateTime?

  // Relaciones
  doctor  Doctor    @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  patient Patient   @relation(fields: [patientId], references: [id], onDelete: Cascade)
  payment Payment?
  messages Message[]

  @@index([doctorId])
  @@index([patientId])
  @@index([status])
  @@index([createdAt])
  @@map("consultations")
}

model Message {
  id             String    @id @default(cuid())
  consultationId String
  senderId       String    // ID del usuario que envía (doctor o patient)
  text           String?   @db.Text
  fileUrl        String?
  audioUrl       String?
  pdfUrl         String?
  createdAt      DateTime  @default(now())

  // Relaciones
  consultation Consultation @relation(fields: [consultationId], references: [id], onDelete: Cascade)

  @@index([consultationId])
  @@index([createdAt])
  @@map("messages")
}

model Payment {
  id              String        @id @default(cuid())
  amount          Decimal       @db.Decimal(10, 2)
  fee             Decimal       @db.Decimal(10, 2)
  netAmount       Decimal       @db.Decimal(10, 2)
  status          PaymentStatus @default(PENDING)
  stripeSessionId String?       @unique
  stripePaymentId String?
  consultationId  String?       @unique
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  paidAt          DateTime?

  // Relaciones
  consultation Consultation? @relation(fields: [consultationId], references: [id])

  @@index([status])
  @@index([stripeSessionId])
  @@index([createdAt])
  @@map("payments")
}

model NotificationToken {
  id         String   @id @default(cuid())
  userId     String
  deviceToken String  @unique
  platform   String?  // web, ios, android
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relaciones
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([deviceToken])
  @@map("notification_tokens")
}

